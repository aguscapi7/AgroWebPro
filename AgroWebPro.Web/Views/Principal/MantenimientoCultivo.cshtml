@model AgroWebPro.Web.Models.CultivoModels
@using AgroWebPro.Utilitarios;
@{
    ViewBag.Title = "Cultivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert.js"></script>
<h2>Mantenimiento de cultivos</h2>

    
    <div class="form-group">
        <div class="row form-group">
            <input type="hidden" id="hdnIdCultivo"/>
            <div class="col-md-6">
                <label>Nombre</label>
                @Html.TextBoxFor(model => model.nombreCultivo, new { @id = "txtNombreCultivo", @class = "form-control", @required = "required", @placeholder = "Nombre" })
            </div>
            <div class="col-md-6">
                <label>Familia</label>
                @Html.DropDownListFor(model => model.idFamilia, new SelectList(Model.listaFamilias, "IdFamilia", "NombreFamilia"), new { @id = "ddlFamilias", @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label>Descripción</label>
                @Html.TextAreaFor(model => model.descripcionCultivo, new { @id = "txtDescripcionCultivo", @class = "form-control", @placeholder = "Descripción" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <button id="btnEditar" class="btn btn-primary pull-right btn-guardar hidden" onclick="EditarCultivo()">Editar</button>
                <button id="btnGuardar" class="btn btn-primary pull-right btn-guardar" value="btnGuardar" onclick="GuardarCultivo()">Guardar</button>
                <button class="btn btn-danger pull-right" id="btnCancelar" type="button" onclick="Cancelar()">Cancelar</button>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Familia</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.listaCultivos != null)
                        {
                            foreach (var itemCultivo in Model.listaCultivos)
                            {
                                <tr>
                                    <td>@itemCultivo.nombreCultivo</td>
                                    <td>@itemCultivo.nombreFamilia</td>
                                    <td>@itemCultivo.descripcionCultivo</td>
                                    <td><button class="btn btn-danger" onclick="EliminarCultivoPaso1('@itemCultivo.idCultivo')"><span class="fa fa-trash"></span> </button>&nbsp;<button class="btn btn-primary" data-idfamilia="@itemCultivo.idFamilia" data-nombrecultivo="@itemCultivo.nombreCultivo" data-descripcioncultivo="@itemCultivo.descripcionCultivo" data-idcultivo="@itemCultivo.idCultivo" onclick="CargarDatosCultivo(this)"><span class="fa fa-pencil"></span> </button></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>

    function GuardarCultivo()
    {

        if (ValidarDatosCultivo())
        {
            var parametros = {
                nombreCultivo: $("#txtNombreCultivo").val(),
                descripcionCultivo: $("#txtDescripcionCultivo").val(),
                idFamilia: $("#ddlFamilias").val(),
                btnGuardar: "btnGuardar"
            };
            $.ajax({
                dataType: "json",
                type: "POST",
                url: '@Url.Action("MantenimientoCultivo", "Principal")',
                data: parametros,
                success: function (data) {
                    if (data.respuesta == '@Constantes.EstadoCorrecto')
                {
                    swal({
                        title: 'Correcto',
                        text: "El cultivo se ha guardado correctamente",
                        type: 'success',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            window.location.href = window.location.href;
                        }
                    });
                }
                else
                {
                    swal({
                        title: 'Error',
                        text: "Ocurrió un error al guardar el cultivo",
                        type: 'warning',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                        }
                    });
                }
                },
                error: function (data) {

                }
            });
        }
    }

    function EditarCultivo() {

        if (ValidarDatosCultivo()) {
            var parametros = {
                idCultivo: $("#hdnIdCultivo").val(),
                nombreCultivo: $("#txtNombreCultivo").val(),
                descripcionCultivo: $("#txtDescripcionCultivo").val(),
                idFamilia: $("#ddlFamilias").val(),
                btnEditar: "btnEditar"
            };
            $.ajax({
                dataType: "json",
                type: "POST",
                url: '@Url.Action("MantenimientoCultivo", "Principal")',
                data: parametros,
                success: function (data) {
                    if (data.respuesta == '@Constantes.EstadoCorrecto')
                {
                    swal({
                        title: 'Correcto',
                        text: "El cultivo se ha editado correctamente",
                        type: 'success',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            window.location.href = window.location.href;
                        }
                    });
                }
                else
                {
                    swal({
                        title: 'Correcto',
                        text: "Ocurrió un error al editar el cultivo",
                        type: 'warning',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                        }
                    });
                }
                }
            });
        }
    }

    function EliminarCultivo() {
        var parametros = {
            idCultivo: $("#hdnIdCultivo").val(),
            btnEliminar: "btnEliminar"
        };
        $.ajax({
            dataType: "json",
            type: "POST",
            url: '@Url.Action("MantenimientoCultivo", "Principal")',
            data: parametros,
            success: function (data) {
                if (data.respuesta == '@Constantes.EstadoCorrecto')
                {
                    swal({
                        title: 'Correcto',
                        text: "El cultivo se ha eliminado correctamente",
                        type: 'success',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                            window.location.href = window.location.href;
                        }
                    });
                }
                else
                {
                    swal({
                        title: 'Correcto',
                        text: "Ocurrió un error al eliminar el cultivo",
                        type: 'warning',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Aceptar'
                    }).then(function (isConfirm) {
                        if (isConfirm) {
                        }
                    });
                }

            }
        });
    }

    function ValidarDatosCultivo() {
        var valido = true;
        var nombreCultivo = $("#txtNombreCultivo").val();
        var idFamilia = $("#ddlFamilias").val();
        if (nombreCultivo == "" || nombreCultivo.trim() == "")
        {
            valido = false;
            swal('El nombre es requerido');
            return valido;
        }
        else if (idFamilia == "@Guid.Empty")
        {
            valido = false;
            swal('Debe seleccionar la familia');
            return valido;
        }
        return valido;
    }

    function EliminarCultivoPaso1(idCultivo)
    {
        swal({
            title: '',
            text: "Esta acción eliminará el cultivo",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Borrar',
            cancelButtonText: 'Cancelar'
        }).then(function (isConfirm) {
            if (isConfirm)
            {
                $("#hdnIdCultivo").val(idCultivo);
                EliminarCultivo();
            }

        })
    }

    function CargarDatosCultivo(cultivo)
    {
        var idCultivo = $(cultivo).data("idcultivo");
        var nombreCultivo = $(cultivo).data("nombrecultivo");
        var descripcionCultivo = $(cultivo).data("descripcioncultivo");
        var idFamilia = $(cultivo).data("idfamilia");


        $("#txtNombreCultivo").val(nombreCultivo);
        $("#txtDescripcionCultivo").val(descripcionCultivo);
        $("#ddlFamilias").val(idFamilia);
        $("#btnEditar").removeClass("hidden");
        $("#btnGuardar").addClass("hidden");
        $("#hdnIdCultivo").val(idCultivo);
    }

    function Cancelar()
    {
        $("#txtNombreCultivo").val("");
        $("#txtDescripcionCultivo").val("");
        $("#dllFamilias").val("@Guid.Empty");
        $("#btnEditar").addClass("hidden");
        $("#btnGuardar").removeClass("hidden");
        $("#hdnIdCultivo").val("");
    }

    </script>
    <style>
        #btnCancelar {
            margin-right: 10px;
        }
    </style>
