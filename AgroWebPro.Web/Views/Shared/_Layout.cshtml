<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/navbar-fixed-left.css" rel="stylesheet" />
    <link href="~/Content/menu.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-left">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" onclick="AbrirEnlace('@Url.Action("Inicio", "Home")')"><img src="~/img/agro_web_small.png" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
                <ul class="nav navbar-nav">
                    <li id="li-inicio" onclick="AbrirEnlace('@Url.Action("Inicio", "Home")')" class="li-menu"><a><i class="fa fa-home fa-lg"></i> Inicio</a></li>
                    <li id="li-cultivo" onclick="AbrirEnlace('@Url.Action("Mantenimiento", "Cultivo")')" class="li-menu"><a><i class="fa fa-leaf fa-lg"></i> Cultivos</a></li>
                    <li id="li-mantenimiento-usuarios" onclick="AbrirEnlace('@Url.Action("Mantenimiento", "Usuario")')" class="li-menu"><a><i class="fa fa-users fa-lg"></i> Empleados</a></li>
                    <li id="li-tareas" onclick="AbrirEnlace('@Url.Action("Mantenimiento", "Usuario")')" class="li-menu"><a><i class="fa fa-tasks fa-lg"></i> Tareas</a></li>
                    <li id="li-terreno" onclick="AbrirEnlace('@Url.Action("Mantenimiento", "Terreno")')" class="li-menu"><a><i class="fa fa-map-o fa-lg"></i> Terrenos</a></li>

                    <li id="li-reportes" data-toggle="collapse" data-target="#reportes" class="collapsed">
                        <a href="#"><i class="fa fa-pie-chart fa-lg"></i> Reportes <span class="arrow"></span></a>
                    </li>
                    
                    <ul class="sub-menu collapse" id="reportes">
                        <li onclick="AbrirEnlace('@Url.Action("Ventas", "Reporte")')"><a href="#">Ventas</a></li>
                        <li onclick="AbrirEnlace('@Url.Action("Cosechas", "Reporte")')"><a href="#">Cosechas</a></li>
                        <li onclick="AbrirEnlace('@Url.Action("Tareas", "Reporte")')"><a href="#">Tareas</a></li>
                    </ul>
                    <li id="li-clientes" onclick="AbrirEnlace('@Url.Action("Terrenos", "Empresa")')" class="li-menu"><a><i class="fa fa-address-book fa-lg"></i> Clientes</a></li>
                    <li id="li-perfil-usuario" onclick="AbrirEnlace('@Url.Action("Terrenos", "Empresa")')" class="li-menu"><a><i class="fa fa-user fa-lg"></i> Perfil</a></li>
                    
                    <li id="li-salir" onclick="AbrirEnlace('@Url.Action("CerrarSesion", "Home")')" class="li-menu"><a><i class="fa fa-sign-out fa-lg"></i> Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div>
            <br /><br />
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AgroWebPro / Un desarrollo de CPSoft</p>
        </footer>
    </div>
    <script>
        function AbrirEnlace(enlace) {
            window.location.href = enlace;
        }
        function EstablecerActivo() {
            var activo = '@(Session[AgroWebPro.Utilitarios.Constantes.MenuActivo] != null ? Session["menu-activo"].ToString() : AgroWebPro.Utilitarios.Constantes.MenuInicio)';
            $(".li-menu").removeClass("active");
            $("#li-" + activo).addClass("active");

        }
        EstablecerActivo();
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
