<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/navbar-fixed-left.css" rel="stylesheet" />
    <link href="~/Content/menu.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-left">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" onclick="AbrirEnlace('@Url.Action("Inicio", "Home")')"><img src="~/img/agro_web_small.png" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
                <ul class="nav navbar-nav">
                    @if (Request.Cookies["usuario"] != null && Request.Cookies["usuario"].Values["opciones-menu"] != null)
                    {
                        System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
                        List<AgroWebPro.Web.Models.OpcionModels> listaOpciones = serializer.Deserialize<List<AgroWebPro.Web.Models.OpcionModels>>(Request.Cookies["usuario"].Values["opciones-menu"].ToString());
                        foreach (var item in listaOpciones)
                        {
                            <li id="li-@item.controlador-@item.accion" onclick="AbrirEnlace('@Url.Action(item.accion, item.controlador)')" class="li-menu"><a><i class="@item.icono"></i> @item.nombre</a></li>

                        }
                    }
                    <li id="li-salir" onclick="AbrirEnlace('@Url.Action("CerrarSesion", "Home")')" class="li-menu"><a><i class="fa fa-sign-out fa-lg"></i> Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div>
            <br /><br />
        </div>
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AgroWebPro / Un desarrollo de CPSoft</p>
        </footer>
    </div>
    <div class="modal fade modalPageLoad" id="modalPageLoad" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" style="margin-top: 20%; overflow-y: auto;">
            <div class="modal-content contentPageLoad">
                <div class="progress"><div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modalPageLoad -->
    <script>
        // Antes de cargar la pantalla muestra el model panel
        window.onbeforeunload = function (e) {
            if (!($("#modalPageLoad").data('bs.modal') || {}).isShown)
                $('#modalPageLoad').modal('show');
        };

        // Una vez cargado los datos se oculta el modal panel
        window.onunload = function (e) {
            if (($("#modalPageLoad").data('bs.modal') || {}).isShown)
                $('#modalPageLoad').modal('hide');
        };
        function AbrirEnlace(enlace) {
            window.location.href = enlace;
        }
        function EstablecerActivo() {
            var activo = '@(Session[AgroWebPro.Utilitarios.Constantes.MenuActivo] != null ? Session["menu-activo"].ToString() : AgroWebPro.Utilitarios.Constantes.MenuInicio)';
            $(".li-menu").removeClass("active");
            $("#li-" + activo).addClass("active");

        }
        EstablecerActivo();
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
